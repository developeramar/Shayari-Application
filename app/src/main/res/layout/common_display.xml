<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bacground_of_cmnfile"

    >

    <LinearLayout
        android:id="@+id/linear_layout_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/red"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_marginTop="40dp"

            >

            <TextView

                android:id="@+id/count_txt"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingRight="10dp"
                android:text="Loading..."
                android:textColor="@color/purple_700"

                android:textSize="30sp"
                android:textStyle="bold" />


        </LinearLayout>
        <!--    <View-->
        <!--        android:layout_width="match_parent"-->
        <!--        android:layout_height="2dp"-->
        <!--        android:background="@color/red"/>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="380dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/stroke_one"
            android:orientation="vertical">

            <TextView
                android:id="@+id/shayari_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="10dp"
                android:text="Loading... "
                android:textColor="@color/purple_700"
                android:textSize="23dp"
                android:textStyle="bold" />

        </LinearLayout>

<!--        <TextView-->
<!--            android:id="@+id/shayari_text2"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="154dp"-->
<!--            android:gravity="center"-->
<!--            android:padding="10dp"-->
<!--            android:text="Loading... "-->
<!--            android:textColor="@color/purple_700"-->
<!--            android:textSize="23dp"-->
<!--            android:textStyle="bold" />-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal"

            >

            <ImageButton

                android:id="@+id/btn_share"

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/share"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:backgroundTint="@color/red"
                />

            <ImageButton

                android:id="@+id/btn_copy"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/copy"
                android:layout_weight="1"
                android:backgroundTint="@color/red"
                />
            <ImageButton

                android:id="@+id/btn_previous"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/previous_btn"
                android:layout_weight="1"
                android:backgroundTint="@color/red"
                />
            <ImageButton

                android:id="@+id/btn_next"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/next_btn"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                android:backgroundTint="@color/red"
                />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"

            android:background="@color/red"/>










    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>